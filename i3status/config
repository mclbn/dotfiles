general {
        output_format = "i3bar"
        colors = true
        interval = 5
        color_good = "#93b3a3"
	    color_bad = "#d78787"
	    color_degraded = "#d7af87"
}

order += "disk /"
order += "disk /tmp"
order += "wireless _first_"
order += "ethernet _first_"
order += "cpu_usage"
order += "load"
order += "cpu_temperature 0"
order += "memory"
