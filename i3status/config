# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
	color_good = "#93b3a3"
	color_bad = "#d78787"
	color_degraded = "#d7af87"
}

order += "disk /"
order += "disk /tmp"
order += "ethernet wg0"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery 0"
order += "cpu_usage"
order += "memory"
order += "load"
order += "tztime local"
order += "volume master"

wireless _first_ {
        format_up = "W: (%quality at %essid, %bitrate) %ip"
        format_down = "W: down"
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

battery 0 {
        format = "%status %percentage"
        format_down = "No battery"
        status_chr = "ğŸ”Œ CHR"
        status_bat = "âš¡ BAT"
        status_full = "ğŸ”‹ FULL"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 20
	last_full_capacity = true
}

ethernet wg0 {
        # if you use %speed, i3status requires root privileges
        format_up = "VPN: ğŸ”"
        format_down = "VPN: ğŸ”“"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}

cpu_usage {
        format = "CPU: %usage"
}

memory {
        memory_used_method = classical
        format = "Mem: %used/%total"
}

load {
        format = "load: %1min"
}

disk "/" {
        format = "/ %avail"
}

disk "/tmp" {
        format = "/tmp %avail"
}

volume master {
       format = "ğŸ”Š: %volume"
       format_muted = "ğŸ”ˆ: (%volume)"
       device = "sysdefault"
       mixer = "Master"
       mixer_idx = "0"
}

