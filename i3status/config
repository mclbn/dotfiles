general {
        output_format = "i3bar"
        colors = true
        interval = 5
        color_good = "#93b3a3"
	    color_bad = "#d78787"
	    color_degraded = "#d7af87"
}

order += "disk /"
order += "disk /tmp"
order += "disk /home/marc/.cache"
order += "wireless _first_"
order += "ethernet _first_"
order += "ethernet wg0"
order += "ethernet wg1"
order += "ethernet wg2"
order += "cpu_usage"
order += "load"
order += "cpu_temperature 0"
order += "memory"
order += "battery 0"
order += "volume master"
order += "tztime local"

disk "/" {
        format = "/ %avail"
        prefix_type = "custom"
        threshold_type = gbytes_avail
        low_threshold = 100
        format_below_threshold = "⚠ / %avail"
        separator = false
}

disk "/tmp" {
        format = "/tmp %avail"
        prefix_type = "custom"
        threshold_type = percentage_avail
        low_threshold = 20
        format_below_threshold = "⚠ /tmp %avail"
        separator = false
}

disk "/home/marc/.cache" {
        format = "~/.cache %used"
        prefix_type = "custom"
}

wireless _first_ {
        format_up = "%essid (%frequency %quality) %ip"
        format_down = ""
}

ethernet _first_ {
        format_up = "%ip"
        format_down = ""
}

ethernet wg0 {
        format_up = "🔐 abydon"
        format_down = ""
}

ethernet wg1 {
        format_up = "🔐 hyperion"
        format_down = ""
}

ethernet wg2 {
        format_up = "🔐 korriban"
        format_down = ""
}

cpu_usage {
        format = "%usage"
        separator = false
}

load {
        format = "%1min"
        # max_threshold = "3.0"
        # format_above_threshold = "⚠ %1min"
        separator = false
}

cpu_temperature 0 {
        format = "%degrees °C"
        max_threshold = 80
        format_above_threshold = "⚠ %degrees °C"
        separator = false
}

memory {
        memory_used_method = classical
        format = "%used / %total"
        threshold_degraded = 4G # 10%
        threshold_critical = 5%
        format_degraded = "⚠ %used / %total"
}

battery 0 {
        format = "%status %percentage"
        format_down = "No battery"
        status_chr = "🔌"
        status_bat = "⚡"
        status_idle = "💤"
        status_full = "🔋"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 30
        threshold_type = "percentage"
	    last_full_capacity = true
}

volume master {
       format = "🔊 %volume"
       format_muted = "🔈 %volume"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}

